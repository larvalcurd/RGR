PROGRAM CountWords(INPUT, OUTPUT);

CONST
  Letters = ['a'..'z', 'A'..'Z'];

TYPE
  Len = 1..256;
  ObjectOfDictionary = RECORD
                         Name: STRING;
                         NumberOfOccurrences: INTEGER;
                       END;
  WordDictionary = ARRAY [1..256] OF ObjectOfDictionary;

VAR
  Dictionary: WordDictionary;
  LengthOfDictionary: Len;
  InputFile, OutputFile: TEXT;

FUNCTION ReadWord(VAR F: TEXT):STRING;
VAR
  Ch: CHAR;
  Word: STRING;
BEGIN
  Word := '';
  READ(F, Ch);
  WHILE (Ch IN Letters) AND (NOT EOLN(F))
  DO
    BEGIN
      Word := Word + Ch;
      READ(F, Ch)
    END;
  IF Ch IN Letters
  THEN
    Word := Word + Ch;
  ReadWord := Word
END;

PROCEDURE AddWordsToDictionary(VAR Dict: WordDictionary; VAR L: Len; VAR F: TEXT);
VAR
  I: Len;
BEGIN
  I := 1;
  WHILE NOT EOF(F)
  DO
    BEGIN
      WHILE NOT EOLN
      DO
        BEGIN
          Dict[I].Name := ReadWord(F);
          Dict[I].NumberOfOccurrences := 1;
          I := I + 1
        END;
      IF EOLN(F) AND NOT EOF(F)
      THEN
        READLN()
    END;
  L := I
END;

PROCEDURE ShowDictionary(VAR Dict: WordDictionary; VAR L: Len; VAR F: TEXT);
VAR
  I: Len;
BEGIN
  FOR I := 1 TO L
  DO
    WRITELN(F, Dict[I].Name, ' ', Dict[I].NumberOfOccurrences)
END;

BEGIN
  ASSIGN(InputFile, 'input.txt');
  RESET(InputFile);
  AddWordsToDictionary(Dictionary, LengthOfDictionary, InputFile);
  CLOSE(InputFile);
  ASSIGN(OutputFile, 'output.txt');
  REWRITE(OutputFile);
  ShowDictionary(Dictionary, LengthOfDictionary, OutputFile);
END.
